                        <script>
                            const opperateur = document.getElementById("opperateur");
                            const rechargement = document.getElementById("rechargement");
                            const recevoir = document.getElementById("recevoir");
                            const montant = document.getElementById("montant");

                            input.oninput = function() {
                                opperateur.innerHTML = (input.value * (1/100)) + " Fcfa";
                                rechargement.innerHTML = (input.value - (input.value * (1/100)) + " Fcfa");
                                recevoir.innerHTML = (input.value - (input.value * (1/100)) + " Fcfa");
                            };
        
