<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- models.cashouts form view -->
    <record id="models_cashouts_view_form" model="ir.ui.view">
        <field name="name">models.cashouts.view.form</field>
        <field name="model">models.cashouts</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="nameUser"/>
                        <field name="date"/>
                        <field name="type"/>
                        <field name="montant"/>


                    </group>


                    <group>
                        <!-- Add your fields here -->
                        <field name="id_client" />
                        <field name="client" />
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- models.cashouts tree view -->
    <record id="models_cashouts_view_tree" model="ir.ui.view">
        <field name="name">models.cashouts.view.tree</field>
        <field name="model">models.cashouts</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="nameUser"/>
                <field name="montant"/>
                <field name="type"/>
                <field name="date"/>
                <field name="id_client" />
                <field name="client" />

                
            </tree>
        </field>
    </record>

    <!-- models.cashouts action window -->
    <record id="models_cashouts_action" model="ir.actions.act_window">
        <field name="name">models.cashouts.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">models.cashouts</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="view_type">form</field> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>

    <menuitem id="_cashouts_root" name="_cashouts" sequence="1"/>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="_cashouts_act" name="Menu" parent="_cashouts_root" action="models_cashouts_action" />
    <!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->
</odoo>