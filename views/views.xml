<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- personnes.refusees form view -->
        <record id="model_name_view_form" model="ir.ui.view">
            <field name="name">personnes.refusees.view.form</field>
            <field name="model">personnes.refusees</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="user_who_refused"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- personnes.refusees tree view -->
        <record id="model_name_view_tree" model="ir.ui.view">
            <field name="name">personnes.refusees.view.tree</field>
            <field name="model">personnes.refusees</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="user_who_refused"/>
                </tree>
            </field>
        </record>
        
    </data>
</odoo>