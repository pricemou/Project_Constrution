                                        <div class="col-4"><p class="tt-somme" id="rechargement">0 Fcfa</p></div>
                                    </div>
                                    <div class="row mt-2">
                                        <div class="col-7"> <p class="tt-total colorBlack"> Montant à recevoir:</p></div>
                                        <div class="col-5"> <p class="tt-somme tt-total colorBleu" id="recevoir">0 <span>Fcfa</span></p></div>
                                    </div>
                                </div>

                                <div class="text-center tt-confirm-retrais retrait-top">
                                    <!-- <button type="button" class="btn  comfirm-retrait">Continuer</button> -->
