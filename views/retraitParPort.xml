                        <form action="/cashout/research/door_to_door_retired" method="POST">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="container">
                                <div class="tt-montant">
                                    <div class="row">
                                        <div class="col-4">
